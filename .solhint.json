{
  "extends": "solhint:recommended",
  "rules": {
    "prettier/prettier": "error",
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": [
      "error",
      ">=0.8.0 <0.9.0"
    ],
    "func-name-mixedcase": "off",
    "var-name-mixedcase": "off",
    "code-complexity": [
      "error",
      8
    ],
    "constructor-syntax": "error",
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ],
    "max-line-length": [
      "error",
      120
    ],
    "not-rely-on-time": "off",
    "reason-string": [
      "warn",
      {
        "maxLength": 64
      }
    ]
  }
}